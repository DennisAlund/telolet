<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:id="@+id/user_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:minHeight="?android:attr/listPreferredItemHeight"
                                    android:padding="8dp"
                                    android:clickable="true"
                                    card_view:cardCornerRadius="8dp"
                                    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/user_content_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="start"
            android:adjustViewBounds="false"
            android:contentDescription="@string/public_user_image_content_description"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_directions_bus_black_24dp"/>

        <TextView
            android:id="@+id/user_handle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/placeholder_public_user_handle"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </LinearLayout>
</android.support.v7.widget.CardView>